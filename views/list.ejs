<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listStyle %>
        </h1>
    </div>
    <div class="box">
       <% items.forEach(function(item){ %>
        
<form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= item._id %>"  onChange="this.form.submit()" >
                <p> <%= item.name %> </p> 
                <input type="hidden" name="listName" value=<%=listStyle %>></input> 
             </div> 
            </form>
             <%  }) %>
           


        

         <form action="/" method="post">
            <input type="text" name="item" placeholder="Add New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= listStyle %>>+</button>
        </form>

    </div>

   
<%- include("footer") -%>